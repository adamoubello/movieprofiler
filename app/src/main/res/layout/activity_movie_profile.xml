                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileTotalSeasons"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileTotalSeasons"
                android:layout_below="@id/movieProfileImdbVotes"
                android:layout_height="wrap_content"
