                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileDirector"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileDirector"
                android:layout_below="@id/movieProfileGenre"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="?android:colorBackground"
                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileWriter"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileWriter"
                android:layout_below="@id/movieProfileDirector"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="?android:colorBackground"
                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileActors"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileActors"
                android:layout_below="@id/movieProfileWriter"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="?android:colorBackground"
                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfilePlot"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfilePlot"
                android:layout_below="@id/movieProfileActors"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="?android:colorBackground"
                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileLanguage"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileLanguage"
                android:layout_below="@id/movieProfilePlot"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="?android:colorBackground"
                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileCountry"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileCountry"
