            <TextView
                android:id="@+id/movieProfileImdbVotes"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileImdbVotes"
                android:layout_below="@id/movieProfileImdbRating"
                android:layout_height="wrap_content"
