            <TextView
                android:id="@+id/movieProfileDvd"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileResponse"
                android:layout_below="@id/movieProfileImdbVotes"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="?android:colorBackground"
                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileBoxOffice"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileResponse"
                android:layout_below="@id/movieProfileDvd"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="?android:colorBackground"
                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileProduction"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileResponse"
                android:layout_below="@id/movieProfileBoxOffice"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="?android:colorBackground"
                android:padding="10dp"
                android:fontFamily="@font/ronysiswadi" />

        </LinearLayout>

    </com.manuelpeinado.fadingactionbar.view.ObservableScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/movie_light_rose"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Movie profiler"
        app:titleTextColor="#fff"
        android:layout_gravity="top" />

</FrameLayout>
