                android:fontFamily="@font/ronysiswadi" />

            <TextView
                android:id="@+id/movieProfileGenre"
                android:textColor="#ff212121"
                android:textSize="16sp"
                android:text="@string/movieProfileGenre"
                android:layout_below="@id/movieProfileRuntime"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
